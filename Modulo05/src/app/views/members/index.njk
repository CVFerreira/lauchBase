{% extends "layout.njk" %}

{% block content %}

<div class="card table-container">
   <div class="header">
        <a class="button" href="/members/create">Register new Member</a>
        
        <form action="/members" method="GET">
            <input 
                type="text"
                name="filter"
                placeholder="Filter by Name or E-mail"
                value={{filter}}
            >

            <button type="submit">Filter</button>
        </form>
    </div>

    <table width="100%">
        <thead>
            <tr>
                <th>Members</th>
                <th>Email</th>
                <th>Height</th>
                <th>Weight</th>
            </tr>
        </thead>
        
        <tbody>
            {% for member in members %}
                <tr>
                    <td>
                        <span style="background-image: url({{member.avatar_url}})"></span>
                        {{member.name}}
                    </td>
                    <td>{{member.email}}</td>
                    <td>{{member.height}} cm</td>
                    <td>{{member.weight}} Kg</td>
                    <td><a href="/members/{{member.id}}">Visualizar</a></td>
                </tr>
            {% endfor%}
        </tbody>
    </table>

     <div class="pagination"
        data-page={{pagination.page}}
        data-total={{pagination.total}}
        data-filter={{filter}}
    ></div>
</div>

{% endblock content %}