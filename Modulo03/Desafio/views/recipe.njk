{% extends "layout.njk" %}
{%  block content %}

    <div class="acessadas">
            <div class="content">
               <div class="card" id="{{item.index}}">
                    <img src="{{item.image}}" alt="{{item.title}}">
                    <h3>{{item.title}}</h3>
                    <h4>{{item.author}}</h4>
                    <h4>{{item.ingredients}}</h4>
                    <h4>Preparation: {{item.preparation}}</h4>
                    <h4>Information: {{item.information}}</h4>
                </div>
            </div>
    </div>

{% endblock content %}}

        
      