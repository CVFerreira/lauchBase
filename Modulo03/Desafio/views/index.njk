{% extends "layout.njk" %}
{%  block content %}

    <section>

        <div>
            <h1>As melhores receitas</h1>
            <p> Aprenda a construir os melhores pratos
                com receitas criadas por profissionais
                do mundo inteiro.
            </p>
        </div>
       
        <img src="/chef.png" alt="imagem do pizzaiolo">

    </section>
    
    <h2>Mais acessadas</h2>
    
    <div class="acessadas">
        {% for item in items%}
            <div class="content">
                <img src="{{item.image}}" alt="{{item.title}}">
                <h3>{{item.title}}</h3>
                <h4>{{item.author}}</h4>
            </div>  
        {% endfor %}    
    </div>
    </div>
{% endblock content %}}