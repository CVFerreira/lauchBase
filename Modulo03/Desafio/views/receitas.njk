{% extends "layout.njk" %}
{%  block content %}

    <div class="acessadas">
        
        {% for item in items%}
            <div class="content">
                <div class="card" id="{{item.index}}">
                    <img src="{{item.image}}" alt="{{item.title}}">
                    <h3>{{item.title}}</h3>
                    <h4>{{item.author}}</h4>
                </div>
            </div>  
        {% endfor %}   
    </div>

    <script src="scripts.js"></script>
{% endblock content %}}

        
      